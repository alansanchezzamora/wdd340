<% if (title) { %>
    <h1 class="title">
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>

            <div id="registerContainer">
                <p>All fields are required</p>
                <form id="newClassificationForm" action="/inv/add-classification" method="post">
                    <div>
                        <label for="classification_name">Classification Name</label>
                        <small>NAME MUST BE ALPHABETIC CHARACTERS ONLY</small>
                        <input type="text" id="classification_name" name="classification_name" required
                            pattern="^[a-zA-Z0-9]+$" value="<%= locals.classification_name %>">
                    </div>
                    <button type="submit">Add Classification</button>

                </form>
            </div>