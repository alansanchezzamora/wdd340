<h1>
    <%= title %>
</h1>

<%- messages() %>
    <div id="loginForm">
        <form action="/account/login" method="post">
            <div>
                <label for="email">Email: </label>
                <input type="email" id="email" name="account_email" required value="<%= locals.account_email %>">
                </div>
                <div>
                    <label for="password">Password: </label>
                <input type="password" name="account_password" id="password"
                    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>

            </div>
            <button type="submit">Submit</button>
            </form>
        <h2>No account? <a href="/account/register">Sign-up</a></h2>
        </div>