<% if (title) { %>
    <h1 class="title">
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>


        <%- messages() %>

            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <% if (!error.msg.startsWith('Invalid value')) { %>
                            <li><%- error.msg %></li>
                            <% } %>
                                <% }) %>
                </ul>
                <% } %>

                    <div>
                        <form id="loginForm" action="/feedback/bug" method="post">
                            <div>
                                <label for="user_name">User Name:
                                    <input type="text" id="user_name" name="user_name" placeholder="" required>
                                </label>
                            </div>
                            <div>
                                <label for="bug_text">Bug:
                                    <input type="text" id="bug_text" name="bug_text" placeholder="" required>
                                </label>
                            </div>
                            <button class="button" type="submit">Send</button>
                        </form>
                    </div>